<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.v2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="android.v2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.v2.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="android.v2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeDarkActivity"
            android:label="@string/title_activity_theme_dark"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/Theme.AppCompat" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeLightActivity"
            android:label="@string/title_activity_theme_light"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeDarkLightActivity"
            android:label="@string/title_activity_theme_dark_light"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeColorActivity"
            android:label="@string/title_activity_theme_color"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/CustomActionBarTheme2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeImageActivity"
            android:label="@string/title_activity_theme_image"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
        <activity
            android:name="android.v2.ThemeOverlayActionBarActivity"
            android:label="@string/title_activity_theme_overlay_action_bar"
            android:parentActivityName="android.v2.MainActivity"
            android:theme="@style/CustomActionBarThemeOverlay" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v2.MainActivity" />
        </activity>
    </application>

</manifest>
